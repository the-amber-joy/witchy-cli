{
  "name": "witchy-cli",
  "version": "1.0.7",
  "description": "Witchy CLI - A magical correspondence lookup tool.",
  "main": "lookup.js",
  "bin": {
    "witchy": "./lookup.js"
  },
  "scripts": {
    "start": "node lookup.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node -e \"require('./src/database/migrator').DatabaseMigrator.ensureDatabaseExists(false).then(() => console.log('✨ Database ready!')).catch(err => console.log('⚠️ Database setup will run on first use'))\"",
    "db:setup": "node -e \"require('./src/database/setup').setupDatabase().then(() => console.log('Database setup complete!'))\"",
    "db:migrate": "node -e \"require('./src/database/migrate').migrateAllData().then(() => console.log('Migration complete!'))\"",
    "db:reset": "node -e \"require('./src/database/migrator').DatabaseMigrator.resetDatabase().then(() => console.log('Database reset complete!'))\"",
    "db:stats": "node -e \"require('./src/database/migrator').DatabaseMigrator.getDbStats().then(stats => console.log('Database stats:', JSON.stringify(stats, null, 2)))\"",
    "db:prepopulate": "node scripts/create-populated-db.js",
    "db:verify": "node scripts/verify-db.js assets/witchy.db",
    "build": "npm run db:prepopulate && pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist",
    "build:exe": "pkg . --out-path dist"
  },
  "keywords": [
    "witchcraft",
    "magic",
    "correspondences",
    "herbs",
    "crystals",
    "cli",
    "spellwork"
  ],
  "author": "Amber Joy <contact@amberjoy.dev>",
  "license": "MIT",
  "dependencies": {
    "readline": "^1.3.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "json/**/*",
      "src/**/*",
      "lists/**/*",
      "assets/**/*",
      "node_modules/sqlite3/**/*"
    ],
    "scripts": [
      "src/**/*.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
